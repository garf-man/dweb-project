{% extends 'index.html.twig' %}
{% block content%}
    <div class="col-10" style="margin-left: 80px">
        <form action="/storeCategory" method="POST" >
            <h2 class="mb-4">Добавить новую категорию</h2>
            <div class="form-group">
                <label for="first_name">Название категории</label>
                <input name="name" type="text" class="form-control" id="name" placeholder="Название" pattern="{1,}$" required>
                <span class="form__error">Это поле должно содержать только буквы</span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Add Category</button>
                <a href="/storeCategory" class="btn btn-secondary">Назад</a>
            </div>
        </form>
    </div>

{% endblock %}